<ul id="developers" class="list-group">
{{#developers}}
<li class="list-group-item d-flex justify-content-between align-items-center">
<p class="h2">{{username}}</p>
    <div>
        {{#tier0}}
        {{#tier1}}
        {{#tier2}}
        <span class="badge" style="background-color: red;">2</span>
        {{/tier2}}
        {{^tier2}}
        <span class="badge border" style="border-style: dashed !important; border-color: red !important;">2</span>
        {{/tier2}}
        <span class="badge" style="background-color: blue;">1</span>
        {{/tier1}}
        {{^tier1}}
        <span class="badge border" style="border-style: dashed !important; border-color: blue !important;">1</span>
        {{/tier1}}
        <span class="badge" style="background-color: green;">0</span>
        {{/tier0}}
        {{^tier0}}
        <span class="badge border" style="border-style: dashed !important; border-color: green !important;">0</span>
        {{/tier0}}
    </div>
</li>
{{/developers}}
</ul>